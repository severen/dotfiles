{{ if eq .chezmoi.hostname "baldr" }}
profile=high-quality
{{ end }}

# All of my machines currently support Vulkan and VA-API, so there should be no
# issues with enabling the use of both APIs.
vo=gpu-next
gpu-api=vulkan
hwdec=vaapi

video-sync=display-resample

interpolation
tscale=oversample

replaygain=album

screenshot-directory=~/Pictures/Screenshots/
