# == General ==
set ssl_force_tls = yes

# == IMAP ==
set imap_user = "severen.redwood@sitehost.co.nz"

set spoolfile="imaps://extmx1.sitehost.co.nz"

mailboxes $spoolfile

set folder     = $spoolfile
set postponed  = "+Drafts"
