set trash      = "+Trash"

# == SMTP ==
set smtp_url="smtps://severen.redwood@sitehost.co.nz@extmx1.sitehost.co.nz"
set smtp_authenticators="plain"

# == Composition ==
set realname="Severen Redwood"
set from="severen.redwood@sitehost.co.nz"
